{{#if searchFilm}}
   <input type="search" name="searchFilm" id="searchFilm" hx-get="/films/search" hx-trigger="keyup changed delay:300ms, search" hx-target="#main" hx-swap="outerHTML">
{{/if}}
<main id="main">
    {{>checkedDB}}
    {{#if results}}
        {{#each results}}
            <h1>Título: {{this.title}}</h1>
            <h2>Episodio: {{this.episode_id}}</h2>
            <a href="/film/{{this.episode_id}}">+ Info</a>
        {{/each}}
    {{else}}
        {{#if film}}
            <a href="/films">Volver</a>
            <h1>Título: {{film.title}}</h1>
            <h2>Episodio: <span id="episode_id" name="episode_id">{{film.episode_id}}</span></h2>
            <button hx-delete="/delete/episode_id" hx-target="#main" hx-swap="outerHTML">Eliminar Personajes</button>
            {{#each characters}}
                <h3>Nombre: {{this.name}}</h3>
                <h4>Género: {{this.gender}}</h4>
                <h4>Especie: {{this.species}}</h4>
            {{/each}}
            
        {{else}}
            <h1>No se encontraron resultados</h1>
        {{/if}}
    {{/if}}
</main>
